{
  "name": "CRUX Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension visualizes field-data from the Chrome User Experience Report",
  "homepage_url": "http://chrome.com",
  "icons": {
    "16": "icons/default16w.png",
    "48": "icons/default48w.png",
    "128": "icons/default128w.png",
    "256": "icons/default256w.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/default256w.png",
    "default_title": "Chrome User Experience Report",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "http://localhost/",
    "http://*/*",
    "https://*/*",
    "https://www.googleapis.com/pagespeedonline/v5/runPagespeed?*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/browser_action/core.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://www.googleapis.com; object-src 'self'"
}